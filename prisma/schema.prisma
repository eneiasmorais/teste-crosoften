// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  name     String
  email    String
  password String

  @@map("users")
}

model Task {
  id          String  @id
  title       String
  description String
  status      Boolean

  @@map("tasks")
}
