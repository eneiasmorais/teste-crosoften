generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  Task     Task[]

  @@map("users")
}

model Task {
  id          String     @id
  title       String
  description String
  status      TaskStatus
  userId      String
  user        User       @relation(fields: [userId], references: [id])

  subtasks Task[]  @relation("subtasks")
  task     Task?   @relation("subtasks", fields: [taskId], references: [id]) //referÃªncia da task pai
  taskId   String? // id da task pai

  @@map("tasks")
}

enum TaskStatus {
  CONCLUIDA
  NAO_CONCLUIDA
}
